{
  "compilerOptions": {
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "composite": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}